name: ApexRebate Unified CI/CD

on:
  push:
    branches: [ main ]
  pull_request:

permissions:
  contents: read
  checks: write
  pull-requests: write
  id-token: write

jobs:
  prepare:
    name: ğŸ§¹ Prepare & Lint + Build + Regression
    runs-on: ubuntu-latest
    steps:
      - uses: actions/checkout@v4
      - uses: actions/setup-node@v4
        with:
          node-version: 20
          cache: npm
      - name: Install dependencies
        run: npm ci --legacy-peer-deps
      - name: Run ESLint
        run: npm run lint
      - name: Build project
        run: npm run build
      - name: Start dev server in background
        run: npm run dev &
      - name: Wait for dev server to be ready
        run: npx wait-on http://localhost:3000 -t 30000 || echo "âš ï¸ Server not ready but continuing"
      - name: Make regression script executable
        run: chmod +x tests/run-regression.sh || true
      - name: Run API regression tests
        shell: bash
        run: bash tests/run-regression.sh

  preview:
    name: ğŸš€ Deploy Firebase Preview
    needs: prepare
    if: github.event_name == 'pull_request'
    runs-on: ubuntu-latest
    outputs:
      preview_url: ${{ steps.resolve.outputs.url }}
    steps:
      - uses: actions/checkout@v4
      - uses: actions/setup-node@v4
        with:
          node-version: 20
          cache: npm
      - name: Install dependencies
        run: npm ci --legacy-peer-deps
      - name: Build project
        run: npm run build
      - name: Deploy Firebase Preview
        id: deploy
        uses: FirebaseExtended/action-hosting-deploy@v0
        with:
          repoToken: ${{ secrets.GITHUB_TOKEN }}
          firebaseServiceAccount: ${{ secrets.FIREBASE_SERVICE_ACCOUNT }}
          projectId: apexrebate-prod
          channelId: pr-${{ github.event.pull_request.number }}
      - name: Resolve preview URL from outputs
        id: resolve
        run: |
          URLS='${{ steps.deploy.outputs.urls }}'
          PREVIEW_URL=$(echo "$URLS" | jq -r '.[0]' || echo "$URLS")
          if [ -z "$PREVIEW_URL" ]; then
            PREVIEW_URL="${{ steps.deploy.outputs.details_url }}"
          fi
          echo "url=$PREVIEW_URL" >> $GITHUB_OUTPUT
          echo "âœ… Preview URL: $PREVIEW_URL"

  e2e:
    name: ğŸ§ª Run E2E Tests
    needs: preview
    runs-on: ubuntu-latest
    steps:
      - uses: actions/checkout@v4
      - uses: actions/setup-node@v4
        with:
          node-version: 20
          cache: npm
      - name: Install dependencies
        run: npm ci --legacy-peer-deps
      - name: Install Playwright
        run: npx playwright install --with-deps
      - name: Run Playwright tests
        env:
          PLAYWRIGHT_TEST_BASE_URL: ${{ needs.preview.outputs.preview_url }}
        run: npm run test:e2e
      - name: Upload Playwright Report
        if: always()
        uses: actions/upload-artifact@v4
        with:
          name: playwright-report
          path: playwright-report/
          retention-days: 30
      - name: Comment E2E results on PR
        if: always()
        uses: actions/github-script@v7
        with:
          script: |
            const fs = require('fs');
            let comment = '## ğŸ§ª E2E Test Results\n\n';
            try {
              const report = JSON.parse(fs.readFileSync('./playwright-report/results.json', 'utf8'));
              const passed = report.suites.reduce((acc, s) => acc + s.specs.filter(sp => sp.ok).length, 0);
              const failed = report.suites.reduce((acc, s) => acc + s.specs.filter(sp => !sp.ok).length, 0);
              comment += passed > 0 ? `âœ… **${passed} tests passed**\n` : '';
              comment += failed > 0 ? `âŒ **${failed} tests failed**\n` : '';
            } catch (e) {
              comment += 'âš ï¸ Could not parse test results\n';
            }
            comment += `\nğŸ”— [View detailed report](https://github.com/${{ github.repository }}/actions/runs/${{ github.run_id }})`;
            github.rest.issues.createComment({
              issue_number: context.issue.number,
              owner: context.repo.owner,
              repo: context.repo.repo,
              body: comment
            });

  production:
    name: ğŸŒ Deploy to Production
    needs: prepare
    if: github.event_name == 'push' && github.ref == 'refs/heads/main'
    runs-on: ubuntu-latest
    steps:
      - uses: actions/checkout@v4
      - uses: actions/setup-node@v4
        with:
          node-version: 20
          cache: npm
      - name: Install dependencies
        run: npm ci --legacy-peer-deps
      - name: Build project
        run: npm run build
      - name: Deploy to Firebase Production
        uses: FirebaseExtended/action-hosting-deploy@v0
        with:
          repoToken: ${{ secrets.GITHUB_TOKEN }}
          firebaseServiceAccount: ${{ secrets.FIREBASE_SERVICE_ACCOUNT }}
          projectId: apexrebate-prod
          channelId: live

# ⚙️ CI/CD Environment Variables Template

# Firebase Project Configuration
PROJECT_ID=studio-2007559230-14fa6

# Base URL (will be overridden by Firebase Preview URL in CI)
BASE_URL=https://apexrebate.web.app

# Node/Next.js Environment
NODE_ENV=production

# Firebase Public Configuration
NEXT_PUBLIC_FIREBASE_API_KEY=${{ secrets.FIREBASE_API_KEY }}
NEXT_PUBLIC_FIREBASE_AUTH_DOMAIN=apexrebate.web.app
NEXT_PUBLIC_FIREBASE_PROJECT_ID=studio-2007559230-14fa6
NEXT_PUBLIC_FIREBASE_STORAGE_BUCKET=apexrebate.appspot.com
NEXT_PUBLIC_FIREBASE_MESSAGING_SENDER_ID=${{ secrets.FIREBASE_SENDER_ID }}
NEXT_PUBLIC_FIREBASE_APP_ID=${{ secrets.FIREBASE_APP_ID }}

# Playwright Test Configuration
PLAYWRIGHT_BROWSERS_PATH=0

# Optional: Database connection (if needed in CI)
# DATABASE_URL=${{ secrets.DATABASE_URL }}

# Optional: NextAuth configuration (if needed in CI)
# NEXTAUTH_URL=${{ secrets.NEXTAUTH_URL }}
# NEXTAUTH_SECRET=${{ secrets.NEXTAUTH_SECRET }}

        {
          "name": "Get Wall of Fame",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{BASE_URL}}/api/wall-of-fame",
              "host": ["{{BASE_URL}}"],
              "path": ["api", "wall-of-fame"]
            }
          },
          "response": []
        }
      ]
    },
    {
      "name": "Broker Data",
      "item": [
        {
          "name": "Get Broker Info",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{BASE_URL}}/api/broker-data?broker=binance",
              "host": ["{{BASE_URL}}"],
              "path": ["api", "broker-data"],
